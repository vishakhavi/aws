    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Attach by Process ID",
            "processId": "${command:PickProcess}",
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "testmocha",
            "console": "integratedTerminal",
            "port": 9230,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\assignment1\\server.js"
        }
    ]
}